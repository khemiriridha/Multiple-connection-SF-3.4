{% extends 'base.html.twig' %}
{% block title %}Bienvenue Chez Admin ERPOS{% endblock %} 
{% block stylesheets %}
<style>
.panel .panel-heading .panel-title{
		width:80% !important;
}
</style>
 {% endblock %} 
{% block body %} 
        <div class="page-container page-navigation-top">            
            <div class="page-content">
                {{ include('ErposBundle:Parametrage:menu_utilisateur.html.twig', { 'menu': menu,'header_menu': header_menu }) }}
                <div class="page-title">                    
                    <h2><span class="fa fa-plus"></span> {{ title }}</h2>
                </div>  
               <div class="page-content-wrap">
			    
                    <div class="row">
						<div class="col-md-4">
						<div class="panel panel-default">
						
						 <form  id="jvalidate" role="form" class="form-horizontal"   >
								<div class="panel-body">
								<div class="form-group">
									<label class="col-md-2 control-label">Groupe:</label>
									<div class="col-md-10">
									<input type="text" name="groupe" id="groupe" value="{{current_groupe.getNomGroupe()}}" class="form-control" required />
									<input type="hidden" name="id_groupe" id="id_groupe" value="{{id_groupe}}" class="form-control" required />
									</div>
								</div> 
								<div class="form-group">
										<div class="btn-group pull-right">
											 <button class="btn btn-primary" id="save" type="button">Modifier</button>
										</div> 
								</div> 
								</div> 
							
					    </div>
						</div>
                        <div class="col-md-8">
						 
											
						{% for key,item in permissions %}
						 {% set module = key|split('-') %}
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><span class="fa fa-{{ module[1] }}">  </span> &nbsp;{{ module[0] }}</h3>
                                    <ul class="panel-controls">
                                        <li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
                                        <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                                    </ul>                                
                                </div>
                                <div class="panel-body">
								    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Rubriques</th>
                                                    <th>Consulter</th>
                                                    <th>Ajouter</th>
                                                    <th>Modifier</th>
													<th>Supprimer</th>
                                                </tr>
                                            </thead>
                                            <tbody>
											{% for link in item %}
											 
                                                <tr>
                                                    <td><span class="fa fa-{{ link.getClasse() }}"></span> &nbsp; {{ link.getNomRubrique() }}</td>
													<td> 
														<div class="form-group">
															<div class="col-md-9">                                                                                                                                        
																<label class="check">
																 
																			<input type="checkbox" name="" id="{{ link.getId() ~ '-consult'}}" value="1" class="icheckbox mybox" {% if link.consul is defined and link.consul == 1 %} checked="checked" {% endif %} />
																		
																
																</label>
															</div>
														</div>
													</td>
                                                    <td> 
														<div class="form-group">
															<div class="col-md-9">                                                                                                                                        
																<label class="check">
																
																	
																		<input type="checkbox" name="" id="{{ link.getId() ~ '-add'}}" value="1" class="icheckbox mybox" {% if link.add is defined and link.add == 1 %} checked="checked" {% endif %}/>
																	
																
																	
															
																</label>
															</div>
														</div>
														
													</td>
													<td> 
														<div class="form-group">
															<div class="col-md-9">                                                                                                                                        
																<label class="check">
																
																	
																	<input type="checkbox" name="" id="{{ link.getId() ~ '-edit'}}" value="1" class="icheckbox mybox" {% if link.edit is defined and link.edit == 1 %} checked="checked" {% endif %} />
																
															
																</label>
															</div>
														</div>
													</td>
													<td> 
														<div class="form-group">
															<div class="col-md-9">                                                                                                                                        
																<label class="check">
																
																
																	<input type="checkbox" name="" id="{{ link.getId() ~ '-supp'}}" value="1" class="icheckbox mybox" {% if link.supp is defined and link.supp == 1 %} checked="checked" {% endif %} />
																
																
															
																</label>
															</div>
														</div>
													</td>
                                                </tr>
                                           {% endfor %} 
                                            </tbody>
                                        </table>
                                    </div>                                     
                                </div>                        
                            </div>
							 {% endfor %} 
							</form>							 
                        </div>            
                    </div>
                </div>
			</div>
		</div>	
	{% endblock %}
{% block javascripts %}
		
	    <audio id="audio-alert" src="{{ asset('audio/alert.mp3') }}" preload="auto"></audio>
        <audio id="audio-alert" src="{{ asset('audio/alert.mp3') }}" preload="auto"></audio>
        <audio id="audio-fail" src="{{ asset('audio/fail.mp3') }}" preload="auto"></audio>
        <script type="text/javascript" src="{{ asset('js/plugins/jquery/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/jquery/jquery-ui.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/bootstrap/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/jquery/jquery-migrate.min.js') }}"></script> 
        <script type='text/javascript' src="{{ asset('js/plugins/icheck/icheck.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js') }}"></script>  
        <script type="text/javascript" src="{{ asset('js/plugins/bootstrap/bootstrap-file-input.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/plugins/bootstrap/bootstrap-datepicker.js') }}"></script>                
 
        <script type="text/javascript" src="{{ asset('js/plugins/bootstrap/bootstrap-select.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/tagsinput/jquery.tagsinput.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/form/jquery.form.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/plugins/cropper/cropper.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/settings.js') }}"></script>        
        <script type="text/javascript" src="{{ asset('js/plugins.js') }}"></script>        
        <script type="text/javascript" src="{{ asset('js/actions.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/plugins/jquery/jquery.validate.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/demo_edit_profile.js') }}"></script>
	 
		
 <script>
  $('#save').click(function(){
 
 var validator = $( "#jvalidate" ).validate({
 rules: {
   groupe: {
    required: true
   }
   },
   messages: {
    groupe: "Veuillez renseigner ce champ" 
   }
   });
 if($("#jvalidate").valid()){   // test for validity
          permission = [];
   $('.mybox:checked').each(function(){ 
          var id = $(this).attr('id');
		  permission.push(id);

    });
	   
			$.ajax({
			  type: "POST",
			  data: {groupe:$('#groupe').val(),id_groupe:$('#id_groupe').val(),permission:permission},
			  url: Routing.generate('edit_groupe_ajax'),
			
			  success: function(response){
				window.location = Routing.generate('list_groupes', {
				'msg': 'edit'
				}); 
			 }
			});
     }  
	});
 </script>
{% endblock %}





