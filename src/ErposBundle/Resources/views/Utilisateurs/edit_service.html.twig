<div class="modal fade" id="edit{{ service.id }}" tabindex="-1" role="dialog"   aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title"><i class="fa fa-edit"></i> &nbsp; Modifier un service</h4>
					</div>
					<div class="modal-body">
					{{ form_start(editForm, { 'method' : 'post', 'action': path('service_edit', { 'id' : service.id }),'attr': {'class': 'form-horizontal'}  } ) }}
					<div class="form-group">
						  {{ form_label(editForm.nom_service, 'Nom service ', { 'label_attr': {'class': 'col-md-3 col-xs-5 control-label'} }) }}
						<div class="col-md-9 col-xs-7">
						  {{ form_widget(editForm.nom_service,{ 'attr': {'class': 'form-control'} }) }}
						</div>
					</div> 
					<div class="form-group">
						  {{ form_label(editForm.commentaire, 'Commentaire ', { 'label_attr': {'class': 'col-md-3 col-xs-5 control-label'} }) }}
						<div class="col-md-9 col-xs-7">
						  {{ form_widget(editForm.commentaire,{ 'attr': {'class': 'form-control'} }) }}
						</div>
					</div> 
					</div>
					<div class="modal-footer">
						{{ form_row(editForm.save, { 'attr': {'class': 'btn btn-primary'} , 'label': 'Enregistrer' }) }}
					</div>
                   {{ form_end(editForm) }}	
				</div>
		</div>
</div>